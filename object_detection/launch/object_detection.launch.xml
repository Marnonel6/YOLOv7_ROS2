<launch>

    <arg name="use_realsense" default="true" />

    <!-- YOLOv7 Object detection node -->
    <!-- <node pkg="object_detection" exec="object_detection" name="object_detection"/> -->

    <include file="$(find-pkg-share realsense2_camera)/launch/rs_launch.py" if="$(eval '\'$(var use_realsense)\' == \'true\'')">
      <arg name="enable_depth" value="true" />
      <arg name="enable_color" value="true" />
      <arg name="enable_fisheye1" value="false" />
      <arg name="enable_fisheye2" value="false" />
      <arg name="align_depth.enable" value="false" />
      <arg name="colorizer.enable" value="false" />
      <arg name="clip_distance" value="-2" />
      <arg name="tf_publish_rate" value="0.0" />
      <arg name="depth_module.profile" value="640x480x30" />
      <arg name="rgb_camera.profile" value="640x480x30" />
    </include>

    <!-- Static transform publisher between base_link and realsense tf frames -->
    <node pkg="tf2_ros" exec="static_transform_publisher" name="base_link_to_camera_link"
          args="0.25 0 0.1 0 0 0 /base_link /camera_link"
          if="$(eval '\'$(var use_realsense)\' == \'true\'')"/>

</launch>

